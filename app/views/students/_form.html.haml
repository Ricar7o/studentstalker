= form_for(@student) do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= pluralize(@student.errors.count, "error") + "prohibited this student from being saved:"

      %ul
      - @student.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :age
    %br
    = f.number_field :age
  .field
    = f.label :address
    %br
    = f.text_field :address
  .field
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  .field
    = f.label :twitter_handle
    %br
    = f.text_field :twitter_handle
  .field
    = f.label :email_
    %br
    = f.text_field :email_
  .actions
    = f.submit
